<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VehiculoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="VehÃ­culo"
        android:gravity="center_horizontal"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Placa"
        android:gravity="center_horizontal"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:hint="p.ej. AAA-111"
        android:inputType="textPersonName"
        android:textSize="20dp"
        android:id="@+id/etplaca"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marca"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:inputType="textPersonName"
        android:hint="p.ej. Mazda"
        android:id="@+id/etmarca"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="Modelo"
        android:textSize="20dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:inputType="number"
        android:hint="p.ej. 1985"
        android:id="@+id/etmodelo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="Precio"
        android:textSize="20dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:inputType="number"
        android:hint="p.ej. 50000000"
        android:id="@+id/etprecio"/>

    <CheckBox
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:checked="false"
        android:textSize="20dp"
        android:text="Activo"
        android:id="@+id/cbactivo"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:text="Guardar"
        android:layout_gravity="center_horizontal"
        android:onClick="Guardar"
        android:id="@+id/btguardar"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:text="Consultar"
        android:onClick="Consultar"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btconsultar"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:text="Anular"
        android:onClick="Anular"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btanular"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:text="Cancelar"
        android:onClick="Cancelar"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btcancelar"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:text="Regresar"
        android:onClick="Regresar"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btregresar"/>



</LinearLayout>